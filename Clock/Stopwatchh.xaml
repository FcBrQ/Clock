<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Clock.Stopwatchh"
             Title="Таймер" Loaded="ContentPage_Loaded">
    <VerticalStackLayout>
        <TimePicker  x:Name="SwatchPicker" Time="0:00:00" HorizontalOptions="CenterAndExpand" Margin="0,60,0,0" FontSize="50"></TimePicker>
        <Button CornerRadius="20" x:Name="StartBT" Text="Начать" Clicked="StartBT_Clicked" VerticalOptions="CenterAndExpand" Margin="0,15,0,0"></Button>
        <Button CornerRadius="20" x:Name="CancelBT" Text="Отмена" Clicked="CancelBT_Clicked" VerticalOptions="CenterAndExpand" Margin="0,15,0,0"></Button>
    </VerticalStackLayout>
</ContentPage>