<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Clock.Timer"
             Title="Секундомер" Loaded="ContentPage_Loaded">
    <VerticalStackLayout>
        <Label x:Name="TimerLB" FontSize="50" VerticalOptions="StartAndExpand" HorizontalOptions="CenterAndExpand" Margin="0,60,0,0"></Label>
        <Button CornerRadius="20" x:Name="StartButton" Text="Начать" VerticalOptions="CenterAndExpand" Clicked="StartButton_Clicked" Margin="0,15,0,0"></Button>
        <Button CornerRadius="20" x:Name="StopButton" Text="Остановить" VerticalOptions="CenterAndExpand" Clicked="StopButton_Clicked" Margin="0,15,0,0"></Button>
        <Button CornerRadius="20" x:Name="ClearButton" Text="Очистить" VerticalOptions="CenterAndExpand" Clicked="ClearButton_Clicked" Margin="0,15,0,0"></Button>
    </VerticalStackLayout>
</ContentPage>