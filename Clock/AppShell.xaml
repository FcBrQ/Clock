<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Clock.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Clock"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Часы">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}"></ShellContent>
        </Tab>
        <Tab Title="Секундомер">
            <ShellContent ContentTemplate="{DataTemplate local:Timer}"></ShellContent>
        </Tab>
        <Tab Title="Таймер">
            <ShellContent ContentTemplate="{DataTemplate local:Stopwatchh}"></ShellContent>
        </Tab>
        <Tab Title="Будильник">
            <ShellContent ContentTemplate="{DataTemplate local:Alarm}"></ShellContent>
        </Tab>
    </TabBar>

</Shell>
